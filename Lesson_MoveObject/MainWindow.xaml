<Window x:Class="Lesson_MoveObject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_MoveObject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FocusManager.FocusedElement="{Binding ElementName=MyCanvas}"
        >
    <Canvas Name="MyCanvas" Focusable="True" KeyDown="MyCanvas_KeyDown">
        <Rectangle Width="100" Height="100" Fill="BlueViolet" 
                   Canvas.Top="20"
                   Canvas.Left="20"
                   Name="rectangle"
                   />
    </Canvas>
</Window>